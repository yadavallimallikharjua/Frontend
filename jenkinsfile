pipeline {
      label(java11_mvn3.8.5)
      triggers{ cron('H * * * *') }
      stages {
         stage('scm') {
            steps {
              git branch: 'declarative', url: 'yadavalli'
             }
          }
         stage('build') {
             steps {
                '/usr/local/apache-maven3.8.5/mvn clean package'
               }
            } 
         stage('publish test reports') {
             steps {
                junit '**/TEST-*.xml'
               }
           }
          stage('archive') {
              steps {
                 archiveArtifacts: 'target/*.jar'
              }
          }
      }
  }
 
